<resources>

    <!-- Base application theme. -->
    <style name="Theme.MyApplication" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/LG_Red</item>
        <item name="colorPrimaryDark">@color/LG_Gray</item>
        <item name="colorAccent">@color/LG_Red</item>
