<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/realwhite"
    android:orientation="vertical"
    tools:ignore="MissingDefaultResource">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="20dp">

        <Button
            android:id="@+id/btn_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:background="@drawable/arrow" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/pretendard_bold"
            android:text="메인으로"
            android:textColor="@color/text_main"
            android:textSize="20sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="45dp"
        android:fontFamily="@font/pretendard_bold"
        android:text="내 프로필 생성"
        android:textColor="@color/text_main"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />


    <LinearLayout
        android:id="@+id/thema"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="35dp"
        app:layout_constraintTop_toBottomOf="@+id/textView7">

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendard"
            android:text="체크 리스트"
            android:textColor="@color/text_main"
            android:textSize="18sp" />

    </LinearLayout>


    <!-- 체크리스트 시작 (라디오 버튼) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="35dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="35dp"
        app:layout_constraintTop_toBottomOf="@+id/thema"
        tools:layout_editor_absoluteX="35dp">

        <!--학년 선택-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendard"
            android:text="몇 학년이신가요?"
            android:textColor="@color/text_main"
            android:textSize="18sp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="0dp" />

        <RadioGroup
            android:id="@+id/grade_radio_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="0dp"
            android:layout_marginTop="10dp">

            <RadioButton
                android:id="@+id/grade_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1학년"
                android:buttonTint="@color/orange_main"
                android:layout_marginEnd="20dp"/>

            <RadioButton
                android:id="@+id/grade_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2학년"
                android:buttonTint="@color/orange_main"
                android:layout_marginEnd="20dp"/>

            <RadioButton
                android:id="@+id/grade_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3학년"
                android:buttonTint="@color/orange_main"
                android:layout_marginEnd="20dp"/>

            <RadioButton
                android:id="@+id/grade_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4학년"
                android:buttonTint="@color/orange_main" />
        </RadioGroup>

